            </section>
        </main>

        <footer class="p-5 w-100 text-center">
            IBU @ Blockchain Fundamentals
        </footer>

        </div>
    </div>
    
    <!-- Web3 and Bootstrap Script for styling -->
    <script src="https://cdn.jsdelivr.net/npm/web3@latest/dist/web3.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <!-- Script to access the actual contract from the frontend: -->
     <script src="js/utils.js"></script>
    <script src="js/web3provider.js"></script>
    <script>
        const username = document.querySelector("#username")
        const spinner_main = document.querySelector("#spinner-main")
        const spinner_main_container = document.querySelector("#spinner-main-container")
        const mechant_option = document.querySelector("#merchantOption")
        const content = document.querySelector("#contentHeader")
        const news_header = document.querySelector("#newsContainerHeader")
        const news_container = document.querySelector("#newsContainer")
        const cars_header = document.querySelector("#carsContainerHeader")
        const cars_container = document.querySelector("#carsContainer")
        const cars_button = document.querySelector("#carsButton")


        if (typeof window.ethereum !== 'undefined') {
            disconnected_div.classList.add("d-none")
        } else {
            connected_div.classList.add("d-none")
        }

        setTimeout(async () => {
            isMerch = await isMerchant();

            if(isMerch){
                const merchantData = await getMerchantData();
                username.innerHTML = merchantData.username;
                spinner_main.classList.add("d-none")
                spinner_main_container.classList.add("d-none")
                mechant_option.classList.remove("d-none")
                content.classList.add('show')

                content.innerHTML += 
                `
                <h1> Welcome back ${merchantData.first_name}!</h1>
                <p class="fs-4"><em>Browse available cars and recent articles</em></p>
                `

                setTimeout(() => {
                    cars_header.classList.add("show")
                    cars_button.classList.add('show')
                })
                setTimeout(Utils.loadThumbnailCars(cars_container), 300)

                setTimeout(() => {
                    news_header.classList.add('show')
                    news_container.classList.add('show')
                }, 800)
            } else {
                const customerData = await getCustomerData();
                username.innerHTML = customerData.username;
                spinner_main.classList.add("d-none")
                spinner_main_container.classList.add("d-none")
                content.classList.add('show')

                content.innerHTML += 
                `
                <h1> Welcome back ${customerData.first_name}!</h1>
                <p class="fs-4"><em>Browse available cars and recent articles</em></p>
                `

                setTimeout(Utils.loadThumbnailCars(cars_container), 300)

                setTimeout(() => {
                    news_container.classList.add('show')
                }, 800)
            }

        }, 500)
      

    </script>
